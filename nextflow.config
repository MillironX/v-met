import java.time.*
Date now = new Date()

process {
    withName: trimmomatic {
        container = 'docker://staphb/trimmomatic'
    }
    withName: seqpurge {
        conda = 'bioconda::ngs-bits'
    }
    withName: kraken {
        container = 'docker://staphb/kraken2'
    }
    withName: filterreads {
        conda = 'bioconda::krakentools'
    }
    withName: kraken2krona {
        conda = 'bioconda::krakentools'
    }
    withName: krona {
        conda = 'bioconda::krona'
    }
    withName: ray {
        container = 'library://millironx/default/ray'
    }
    withName: iva {
        container = 'docker://sangerpathogens/iva'
    }
    withName: blastnray {
        container = 'docker://ncbi/blast'
    }
    withName: blastxray {
        container = 'docker://ncbi/blast'
    }
    withName: blastniva {
        container = 'docker://ncbi/blast'
    }
    withName: blastxiva {
        container = 'docker://ncbi/blast'
    }
}
singularity {
    enabled = true
}
params {
    tracedir = "pipeline_info"
    timestamp = now.format("yyyyMMdd-HH-mm-ss")
}
timeline {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_timeline.html"
}
report {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_report.html"
}
trace {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_trace.txt"
}
dag {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_dag.svg"
}
