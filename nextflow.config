process {
    withName: trimmomatic {
        container = 'docker://staphb/trimmomatic'
    }
    withName: kraken {
        container = 'docker://staphb/kraken2'
        queueSize = 4
    }
}
singularity {
    enabled = true
    runOptions = "--bind /databases"
}
executor {
    $local {
        queueSize = 4
        memory = '64 GB'
    }
}